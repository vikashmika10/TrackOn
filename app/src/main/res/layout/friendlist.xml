<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" >
    <com.maps.mapsplotter.RoundedLetterView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rlv_name"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        tools:visibility="visible"
        app:backgroundColorValue="@color/green"
        app:titleColor="@android:color/white"
        app:titleSize="20dp"
        app:titleText="A"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/friendView1"
        android:textSize="18sp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_msg_input"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/friendView2" />


    <TextView
        android:id="@+id/friendView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_msg_input"
        android:layout_marginLeft="39dp"
        android:layout_below="@+id/friendView1"
        android:layout_toRightOf="@+id/rlv_name" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/friendView1"
            android:layout_alignParentRight="true" />


</RelativeLayout>